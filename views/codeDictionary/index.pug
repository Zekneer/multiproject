extends ./layouts/mainLayout.pug

block title
  <title>Code Dictionary</title>

block styles
  <link rel="stylesheet" type="text/css" href="/public/codeDictionary/styles/index.min.css">

block scripts
  <script src="/public/codeDictionary/scripts/index.js" defer></script>

block content
  <!-- main -->
  <main class="main page__main">
    <nav class="dictionary-menu main__dictionary-menu">
      <ul class="themes dictionary-menu__themes">
        each theme in themes
          <li class="themes__item">
            <div class="themes__title">
              <span class="themes__title-text">#{theme.theme_name}</span>
              <i class="themes__icon">
                <svg aria-hidden="true" focusable="false" data-prefix="fas" data-icon="chevron-right" class="svg-inline--fa fa-chevron-right fa-w-10" role="img"  xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512">
                  <path d="M285.476 272.971L91.132 467.314c-9.373 9.373-24.569 9.373-33.941 0l-22.667-22.667c-9.357-9.357-9.375-24.522-.04-33.901L188.505 256 34.484 101.255c-9.335-9.379-9.317-24.544.04-33.901l22.667-22.667c9.373-9.373 24.569-9.373 33.941 0L285.475 239.03c9.373 9.372 9.373 24.568.001 33.941z">
                  </path>
                </svg>
              </i>
            </div>
            <ul class="subthemes themes__subthemes">
              each subtheme in theme.subthemes
                <li class="subthemes__item"><a class="subthemes__link" href="/codeDictionary/subtheme/#{subtheme.subtheme_id}" data-id="#{subtheme.subtheme_id}">#{subtheme.subtheme_name}</a></li>
            </ul>
          </li>
      </ul>
    </nav>
    <div class="content main__content">
    </div>
  </main>
  <!-- /main -->
